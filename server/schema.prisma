// This file is automatically generated by Keystone, do not modify it manually.
// Modify your Keystone config when you want to change this.

datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id          String       @id @default(cuid())
  name        String       @default("")
  email       String       @unique @default("")
  password    String
  isAdmin     Boolean      @default(false)
  submissions Submission[] @relation("Submission_submitter")
  favorites   Favorite[]   @relation("Favorite_user")
  createdAt   DateTime?    @default(now())
}

model Site {
  id                       String     @id @default(cuid())
  name                     String     @default("")
  slug                     String     @unique @default("")
  link                     String     @default("")
  description              String     @default("")
  portraitImage_filesize   Int?
  portraitImage_extension  String?
  portraitImage_width      Int?
  portraitImage_height     Int?
  portraitImage_id         String?
  landscapeImage_filesize  Int?
  landscapeImage_extension String?
  landscapeImage_width     Int?
  landscapeImage_height    Int?
  landscapeImage_id        String?
  isFeatured               Boolean    @default(false)
  tags                     Tag[]      @relation("Site_tags")
  categories               Category[] @relation("Category_sites")
  content                  String     @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  favorites                Favorite[] @relation("Favorite_site")
  createdAt                DateTime?  @default(now())
}

model Tag {
  id    String @id @default(cuid())
  name  String @default("")
  slug  String @unique @default("")
  sites Site[] @relation("Site_tags")
}

model Category {
  id    String @id @default(cuid())
  name  String @default("")
  slug  String @unique @default("")
  sites Site[] @relation("Category_sites")
}

model Submission {
  id          String    @id @default(cuid())
  name        String    @default("")
  link        String    @default("")
  description String    @default("")
  status      String    @default("received")
  submitter   User?     @relation("Submission_submitter", fields: [submitterId], references: [id])
  submitterId String?   @map("submitter")
  createdAt   DateTime? @default(now())

  @@index([submitterId])
}

model Favorite {
  id        String    @id @default(cuid())
  site      Site?     @relation("Favorite_site", fields: [siteId], references: [id])
  siteId    String?   @map("site")
  user      User?     @relation("Favorite_user", fields: [userId], references: [id])
  userId    String?   @map("user")
  createdAt DateTime? @default(now())

  @@index([siteId])
  @@index([userId])
}
